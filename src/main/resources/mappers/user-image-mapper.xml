<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.uahage.api.repository.UserImageRepository">
    <resultMap id="findAllByUserIdMap" type="com.uahage.api.domain.UserImage">
        <id property="id" column="id" />
        <result property="imagePath" column="image_path"/>
        <result property="previewImagePath" column="preview_image_path"/>
        <association property="user" javaType="com.uahage.api.domain.User">
            <id property="id" column="id"></id>
        </association>
    </resultMap>
    <select id="findAllByUserId" parameterType="java.lang.Long" resultMap="findAllByUserIdMap">
        select id, user_id, image_path, preview_image_path from user_images
        where user_id = #{userId};
    </select>

    <insert id="saveAll" parameterType="com.uahage.api.domain.UserImage">
        insert into user_images(user_id, image_path, preview_image_path)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.user.id}, #{item.imagePath}, #{item.previewImagePath})
        </foreach>
    </insert>

    <delete id="deleteById" parameterType="java.lang.Long">
        delete from user_images
        where id = #{id};
    </delete>
</mapper>